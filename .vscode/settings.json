{
  // Treat .gohtml as Go-template, not plain HTML
  "files.associations": {
    "*.gohtml": "go-template"
  },
  // Disable HTML formatting for go-html-template
  "[go-html-template]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "files.exclude": {
    "**/*.vo": true,
    "**/*.vok": true,
    "**/*.vos": true,
    "**/*.aux": true,
    "**/*.glob": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  }
}
